<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/text_primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/text_primary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Surface and background colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:colorBackgroundFloating">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        
        <!-- ActionBar styles -->
        <item name="actionBarStyle">@style/ActionBar.Light</item>
        <item name="actionBarTheme">@style/ActionBarTheme.Light</item>
        
        <!-- SearchView styles -->
        <item name="android:editTextColor">@color/search_text_light</item>
        <item name="android:textColorHint">@color/search_hint_light</item>
        <item name="searchViewStyle">@style/SearchViewStyle.Light</item>

        <!-- Card style -->
        <item name="materialCardViewStyle">@style/CustomCardView.Light</item>
    </style>

    <!-- Style personnalisé pour l'ActionBar -->
    <style name="ActionBar.Light" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/ActionBarTitle.Light</item>
    </style>

    <style name="ActionBarTitle.Light" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ActionBarTheme.Light" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/text_primary_light</item>
    </style>

    <!-- Style personnalisé pour les Chips -->
    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/text_secondary_light</item>
        <item name="chipMinHeight">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="chipCornerRadius">18dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- Style personnalisé pour SearchView en mode clair -->
    <style name="SearchViewStyle.Light" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/white</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ic_clear</item>
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryHint">Rechercher un film...</item>
        <item name="android:textColorHint">@color/search_hint_light</item>
    </style>

    <!-- Style personnalisé pour les cartes en mode clair -->
    <style name="CustomCardView.Light" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPadding">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/text_secondary_light</item>
    </style>

    <style name="Theme.Movieapp" parent="Theme.MovieApp" />

    <!-- Style personnalisé pour les dialogues de sélection de date et d'heure -->
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:colorControlNormal">?attr/colorOnSurface</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:colorControlHighlight">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:colorButtonNormal">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:colorForeground">?attr/colorOnSurface</item>
        <item name="android:colorForegroundInverse">?attr/colorOnSurface</item>
        <item name="android:colorBackgroundFloating">?attr/colorSurface</item>
    </style>

    <style name="CustomTimePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:colorControlNormal">?attr/colorOnSurface</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:colorControlHighlight">@color/primary</item>
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:colorButtonNormal">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="android:colorForeground">?attr/colorOnSurface</item>
        <item name="android:colorForegroundInverse">?attr/colorOnSurface</item>
        <item name="android:colorBackgroundFloating">?attr/colorSurface</item>
    </style>
</resources>